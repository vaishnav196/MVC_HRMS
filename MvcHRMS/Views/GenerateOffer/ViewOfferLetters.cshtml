@{
}
@model IEnumerable<MvcHRMS.Models.OfferLetter>
<div class="w-75 mx-auto">


<div class="container">
    <h2 class="text-center">Offer Letters</h2>
    <table class="table table-striped table-dark">
        <thead>
            <tr>
                <th>Employee ID</th>
                <th>Name</th>
              
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var offerLetter in Model)
            {
                <tr>
                    <td>@offerLetter.EmpId</td>
                    <td>@offerLetter.Name</td>
                  
                    <td>
                        <a href="@Url.Action("Download", "GenerateOffer", new { id = offerLetter.Id })" class="btn btn-outline-danger">Download</a>
                        <a href="@Url.Action("ViewPdf", "GenerateOffer", new { id = offerLetter.Id })" class="btn btn-outline-primary">View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
</div>