@model MvcHRMS.Models.ApplyLeaveViewModel

@{
    ViewData["Title"] = "Apply for Leave";
}

<div class="container">
    <h1>Apply for Leave</h1>

    <form asp-action="ApplyLeave" asp-controller="Leave" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="FromDate" class="control-label"></label>
            <input asp-for="FromDate" class="form-control" type="date" />
            <span asp-validation-for="FromDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ToDate" class="control-label"></label>
            <input asp-for="ToDate" class="form-control" type="date" />
            <span asp-validation-for="ToDate" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Reason" class="control-label"></label>
            <textarea asp-for="Reason" class="form-control" rows="3"></textarea>
            <span asp-validation-for="Reason" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Apply Leave</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
